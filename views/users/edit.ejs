<% layout('layouts/boilerplate')%>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow border-0">
        <div class="card-body">
          <h1 class="text-center">Edit Profile</h1>

          <form action="/users/<%=user._id%>?_method=PUT" method="post">
            <div class="form-group mb-2">
              <label class="form-label" for="firstName">First Name</label>
              <input class="form-control" type="text" id="firstName" name="user[firstName]" value="<%= user.firstName %>" />
            </div>

            <div class="form-group mb-2">
              <label class="form-label" for="lastName">Last Name</label>
              <input class="form-control" type="text" id="lastName" name="user[lastName]" value="<%= user.lastName %>" />
            </div>

            <div class="form-group mb-2">
              <label class="form-label" for="email">Email</label>
              <input class="form-control" type="email" id="email" name="user[email]" value="<%= user.email %>" />
            </div>

            <div class="form-group mb-2">
              <label class="form-label" for="phone">Phone</label>
              <input class="form-control" type="text" id="phone" name="user[phone]" value="<%= user.phone %>" />
            </div>

            <div class="form-group mb-2">
              <label class="form-label" for="bio">About</label>
              <input class="form-control" type="bio" id="bio" name="user[bio]" value="<%= user.bio %>" />
            </div>

            <!-- <label class="form-label" for="avatar">Avatar</label>
            <div class="form-file custom-file">
              <input class="form-control custom-file-input" accept="image/*" type="file" id="avatar" name="avatar" />
              <label for="image" class="form-label custom-file-label"></label>
            </div> -->

            <div class="d-grid gap-2 col-6 mx-auto">
              <button class="btn btn-success btn-block">Update</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
